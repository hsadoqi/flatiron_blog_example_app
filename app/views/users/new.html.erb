<% if @user.errors.any? %>
<ul>
    <% @user.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>


<%= form_for @user do |f|%>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :email %><br>
<%= f.text_field :email %><br>
<%= f.label :password %><br>
<%= f.text_field :password %>
<%= f.submit "Create new user"%>
<% end %>