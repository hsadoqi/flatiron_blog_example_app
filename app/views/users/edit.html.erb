<% if @user.errors.any? %>
<ul>
    <% @user.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @user do |f|%>
<%= render partial: 'form', locals: {:f => f}%>
<%= f.submit "Update user"%>
<% end %>

<%= button_to "Delete", user_path(@user), method: :delete %>